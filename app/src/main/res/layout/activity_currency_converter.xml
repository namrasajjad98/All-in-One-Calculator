<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#DFDDDD"
    android:orientation="vertical"
    tools:context=".CurrencyConverter">

    <com.airbnb.lottie.LottieAnimationView
        android:layout_width="match_parent"
        android:layout_height="280.00dp"
        app:lottie_autoPlay="true"
        app:lottie_loop="true"
        app:lottie_rawRes="@raw/currency"/>

    <EditText
        android:layout_width="match_parent"
        android:layout_marginTop="30dp"
        android:layout_height="56dp"
        android:padding="16dp"
        android:id="@+id/currText"
        android:textColor="@color/white"
        android:hint="Enter Amount"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:drawablePadding="8dp"
        android:background="@drawable/custom_card"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        />

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp">
    <TextView
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:padding="16dp"
        android:id="@+id/from"
        android:textColor="@color/white"
        android:hint="From"
        android:textColorHint="@color/white"
        android:inputType="number"
        android:drawablePadding="8dp"
        android:background="@drawable/custom_card"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:textSize="18sp"
        />
    <Spinner
        android:layout_width="180dp"
        android:layout_height="56dp"
        android:id="@+id/spinFrom"
        android:background="@drawable/custom_card"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:padding="10dp"
        android:spinnerMode="dropdown"
        android:popupBackground="@color/purple_200"
        />

    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp">
        <TextView
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:padding="16dp"
            android:id="@+id/to"
            android:textColor="@color/white"
            android:hint="To"
            android:textColorHint="@color/white"
            android:inputType="number"
            android:drawablePadding="8dp"
            android:background="@drawable/custom_card"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:textSize="18sp"
            />
        <Spinner
            android:layout_width="180dp"
            android:layout_height="56dp"
            android:id="@+id/spinTo"
            android:background="@drawable/custom_card"
            android:layout_marginStart="8dp"
            android:layout_marginEnd="8dp"
            android:padding="10dp"
            android:spinnerMode="dropdown"
            android:popupBackground="@color/purple_200"/>

    </LinearLayout>
    <TextView
        android:id="@+id/resulConvert"
        android:layout_width="match_parent"
        android:layout_height="56dp"
        android:layout_marginTop="20dp"
        android:background="@drawable/custom_card"
        android:padding="16dp"
        android:layout_marginStart="8dp"
        android:layout_marginEnd="8dp"
        android:hint="Result"
        android:textSize="18sp"
        android:textColor="@color/white"
        android:textColorHint="@color/white"
        android:visibility="gone"/>

    <androidx.appcompat.widget.AppCompatButton
        android:id="@+id/convertBtn"
        android:layout_width="250dp"
        android:layout_height="50dp"
        android:layout_gravity="center"
        android:layout_marginTop="30dp"
        android:background="@drawable/custom_card"
        android:text="Convert"
        android:textColor="@color/white"
        android:textSize="20sp"
        android:textStyle="bold" />

</LinearLayout>